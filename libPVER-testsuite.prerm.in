#! /bin/sh

set -e

remove_bytecode()
{
    pkg=$1
    dpkg -L $1 \
	| awk '/\.py$/ {print $0"c\n" $0"o"}' \
	| xargs -r rm -f >&2
}

case "$1" in
    remove)
	remove_bytecode lib@PVER@-testsuite
        ;;
    upgrade)
	remove_bytecode lib@PVER@-testsuite
        ;;
    deconfigure)
        ;;
    failed-upgrade)
        ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

